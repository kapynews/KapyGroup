<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Kapy News</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink( "Index", "Select Categories", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="@Url.Action("Index", "Home")" style="padding:0px 10px;">
                            <img src="@Url.Content("~/Content/Images/kapy_logo.png")" style="width:80px;height:50px;" />
                        </a>
                    </li>
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("News", "Index", "News1")</li>
                    <li>@Html.ActionLink("Personalize", "Insert", "AspNetUser_Category")</li>

                    @*<li>@Html.ActionLink("About", "About", "Home")</li> --> *@
                    @* <li>@Html.ActionLink("Contact", "Contact", "Home")</li> *@

                    @* <li>@Html.ActionLink("Categories", "Categories", "News")</li> *@
                    @* <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Categories
                            <span class="caret"></span>
                        </a>
                    *@
                    <li>
                        @using (Html.BeginForm("SearchForNews", "News1", FormMethod.Get))
                        {

                            @Html.TextBox("SearchString")<span>    </span><input class="btn btn-primary btn-xs" type="submit" value="Search" />

                         <!-- a button for searching news - the search method will be implemented in the News controller -->
                        }
                    </li>
                </ul>

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="container">
            <div class="col-sm-3 col-md-3  sidebar-offcanvas" id="sidebar" role="navigation">

                @Html.Action("_MenuView", "News1")
            </div>
            <div class="col-sm-9 col-md-9 main">
                @RenderBody()
            </div>
        </div>



        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Kapy News. Kapy News is not responsible for the content of external sites.</p>
        </footer>
    </div>



    @*<div class="navbar navbar-inverse navbar-fixed-left">
                <a class="navbar-brand" href="#">Categories</a>
                @Html.Action("_MenuView", "News1")
            </div>
            <div class="row">
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - Kapy News. Kapy News is not responsible for the content of external sites.</p>
                </footer>
            </div>
        </div>*@



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
